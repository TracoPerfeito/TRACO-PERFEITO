    <link rel="stylesheet" href="/css/adm-lista-usuarios.css">
   
</head>
<body>
    
    <!--INICIO DO MENU TOP ADM -->

    <%- include('../partials/menu_top_adm.ejs'); %>

    <!--FIM DO MENU TOP ADM  -->


    <!-- MENU LATERAL DO ADM -->

    <%- include('../partials/menu_lateral_adm.ejs'); %>

    <!-- MENU LATERAL DO ADM -->




  <!-- LISTAGEM DOS USU√ÅRIOS -->

  <section class="usuarios-section">
  <header>
    <h2>Usu√°rios</h2>
  </header>

  <section class="usuarios-list">

    <% var usuarios = typeof usuarios !== 'undefined' ? usuarios : []; %>
    
    <% usuarios.forEach(usuario => { %>
      <section class="usuario-card">
        <section class="usuario-foto">
          <% if (usuario.FOTO_PERFIL_PASTA_USUARIO) { %>
            <img src="/uploads/<%= usuario.FOTO_PERFIL_PASTA_USUARIO %>" 
                 alt="Foto de <%= usuario.NOME_USUARIO %>" 
                 width="50" height="50" 
                 style="border-radius:50%;">
          <% } else { %>
            <img src="/images/default-avatar.png" 
                 alt="Sem foto" 
                 width="50" height="50" 
                 style="border-radius:50%;">
          <% } %>
        </section>

        <section class="usuario-info">
          <p><strong>Nome:</strong> <%= usuario.NOME_USUARIO %></p>
          <p><strong>E-mail:</strong> <%= usuario.EMAIL_USUARIO %></p>
          <p><strong>User:</strong> <%= usuario.USER_USUARIO %></p>
          <p><strong>Tipo:</strong> <%= usuario.TIPO_USUARIO.charAt(0).toUpperCase() + usuario.TIPO_USUARIO.slice(1) %></p>
          <p><strong>Status:</strong> 
            <% if (usuario.STATUS_USUARIO === 'ativo') { %>
              <span class="status ativo">Ativo</span>
            <% } else if (usuario.STATUS_USUARIO === 'inativo') { %>
              <span class="status inativo">Inativo</span>
            <% } else { %>
              <span class="status pendente"><%= usuario.STATUS_USUARIO %></span>
            <% } %>
          </p>
        </section>

        <section class="usuario-acoes">
          <a href="/adm-usuarios/ver/<%= usuario.ID_USUARIO %>">üîç</a>
          <a href="/adm-usuarios/editar/<%= usuario.ID_USUARIO %>">‚úèÔ∏è</a>
          <a href="/adm-usuarios/excluir/<%= usuario.ID_USUARIO %>" onclick="return confirm('Tem certeza?')">üóëÔ∏è</a>
        </section>
      </section>
    <% }) %>
  </section>
</section>
    <!-- FIM DA LISTAGEM DOS USU√ÅRIOS -->



















  
    <!-- LINK DO MENU LATERAL -->
      <script src="/js/menu-lateral-adm.js"></script>

</body>
</html>