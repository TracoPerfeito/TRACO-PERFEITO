<script>
  const phrases = [
    "ALCANCE UMA VISIBILIDADE MAIOR.",
    "CONQUISTE MAIS CLIENTES.",
    "APARE√áA PRIMEIRO NAS PESQUISAS.",
    "GANHE UM SELO DE PROFISSIONAL CONFI√ÅVEL."
  ];

  let i = 0;
  let j = 0;
  let currentPhrase = [];
  let isDeleting = false;
  let typingElement = document.querySelector(".typing");
  let waitTime = false;

  function loop() {
    typingElement.innerHTML = currentPhrase.join("");

    if (!isDeleting && j <= phrases[i].length) {
      currentPhrase.push(phrases[i][j]);
      j++;
    }

    if (isDeleting && j > 0) {
      currentPhrase.pop();
      j--;
    }

    if (j === phrases[i].length && !waitTime) {
      waitTime = true;
      setTimeout(() => {
        isDeleting = true;
        waitTime = false;
      }, 5000);
    }

    if (isDeleting && j === 0) {
      isDeleting = false;
      i++;
      if (i === phrases.length) i = 0;
    }

    setTimeout(loop, isDeleting ? 50 : 120);
  }

  loop();

  // scroll suave at√© o card
