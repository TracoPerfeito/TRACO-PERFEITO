    <input type="hidden" name="nota" id="nota" value="0">
    <input type="hidden" name="idProfissional" id="idProfissionalAvaliado" value="<%= usuario.ID_USUARIO %>">

    <textarea id="comentario" name="comentario" placeholder="Coment√°rio" maxlength="500"></textarea>
    <small id="contador">0/500 caracteres</small>

    <button type="submit">Enviar Avalia√ß√£o</button>
  </form>

  <script>
    const estrelas = document.querySelectorAll('#estrelas .estrela');
    const inputNota = document.getElementById('nota');
    const textarea = document.getElementById('comentario');
    const contador = document.getElementById('contador');
    const limite = 500; 

    // ‚≠ê Atualizar nota
    estrelas.forEach(estrela => {
      estrela.addEventListener('click', () => {
        const valor = Number(estrela.dataset.valor);
        inputNota.value = valor; 
        atualizarEstrelas(valor);
      });
    });

    function atualizarEstrelas(nota) {
      estrelas.forEach(estrela => {
        if(Number(estrela.dataset.valor) <= nota) {
          estrela.setAttribute('name', 'star'); // preenchida
        } else {
          estrela.setAttribute('name', 'star-outline'); // vazia
        }
      });
    }

    // üìù Contador de caracteres
    textarea.addEventListener('input', () => {
      let caracteres = textarea.value.length;
      if (caracteres > limite) {
        textarea.value = textarea.value.substring(0, limite); // impede ultrapassar
        caracteres = limite;
      }
      contador.textContent = `${caracteres}/${limite} caracteres`;
    });
  </script>
<% } %>


    
