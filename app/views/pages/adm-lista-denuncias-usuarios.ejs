<section class="secao-denuncias">
    <h1 class="titulo-denuncias">üìã Den√∫ncias de Perfil</h1>

    <% if (denuncias && denuncias.length > 0) { %>
      <% denuncias.forEach(den => { %>
        <article class="card-denuncia-perfil">
          <header class="cabecalho-denuncia-perfil">
            <h2>#<%= den.ID_DENUNCIA %></h2>
            <span class="status-denuncia <%= den.STATUS %>"><%= den.STATUS %></span>
          </header>

          <section class="conteudo-denuncia-perfil">
            <p><strong>Denunciante:</strong> 
              <%= den.NOME_DENUNCIANTE %> (ID: <%= den.ID_USUARIO_DENUNCIANTE %>)
            </p>
            <p><strong>Denunciado:</strong> 
              <%= den.NOME_DENUNCIADO %> (ID: <%= den.ID_USUARIO_DENUNCIADO %>)
            </p>
            <p><strong>Motivo:</strong> <%= den.MOTIVO %></p>
            <p><strong>Data:</strong> 
              <%= new Date(den.DATA_DENUNCIA).toLocaleString('pt-BR') %>
            </p>
          </section>

          <footer class="rodape-denuncia-perfil">
            <button class="btn-detalhes-denuncia" class="btn-detalhes-denuncia" 
    onclick="window.location.href='/perfil/<%= den.ID_USUARIO_DENUNCIADO %>'"
  >Ir para o perfil</button>
            <button 
              class="btn-alterar-status" 
              data-denuncia-id="<%= den.ID_DENUNCIA %>" 
              data-usuario-id="<%= den.ID_USUARIO_DENUNCIADO %>"
            >
              Alterar Status
            </button>
          </footer>
        </article>
      <% }) %>
    <% } else { %>
      <p class="msg-sem-denuncia"> Nenhuma den√∫ncia encontrada</p>
    <% } %>
  </section>


<section id="modalStatusPerfil" class="modal-perfil">
  <section class="modal-conteudo-perfil">
    <h2>Alterar Status da Den√∫ncia</h2>

    <form id="formStatusPerfil" method="POST">
      <input type="hidden" name="idDenuncia" id="idDenunciaInput">
      <input type="hidden" name="idUsuarioDenunciado" id="idUsuarioInput">
      <input type="hidden" name="_method" id="methodInput" value="POST">

      <label for="acaoPerfil">A√ß√£o:</label>
      <select id="acaoPerfil" name="acao">
        <option value="">Selecione...</option>
        <option value="suspender">Suspender Usu√°rio</option>
        <option value="descartar">Descartar Den√∫ncia</option>
      </select>

      <section class="botoes-modal-perfil">
        <button type="submit" class="btn-confirmar">Confirmar</button>
        <button type="button" onclick="fecharModal()" class="btn-cancelar">Cancelar</button>
      </section>
    </form>
  </section>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
  const modal = document.getElementById("modalStatusPerfil");
  const selectAcao = document.getElementById("acaoPerfil");
  const form = document.getElementById("formStatusPerfil");
  const methodInput = document.getElementById("methodInput");

  let idDenuncia = null;
  let idUsuarioDenunciado = null;

  // üîπ Abrir modal e preencher IDs
  document.querySelectorAll(".btn-alterar-status").forEach((btn) => {
    btn.addEventListener("click", () => {
      idDenuncia = btn.getAttribute("data-denuncia-id");
      idUsuarioDenunciado = btn.getAttribute("data-usuario-id");

      document.getElementById("idDenunciaInput").value = idDenuncia;
      document.getElementById("idUsuarioInput").value = idUsuarioDenunciado;

      modal.style.display = "flex";
    });
  });

  // üîπ Fechar modal clicando fora
  modal.addEventListener("click", (e) => {
    if (e.target === modal) fecharModal();
  });

  // üîπ Mudar o destino do form conforme a√ß√£o
  form.addEventListener("submit", (e) => {
    const acao = selectAcao.value;

    if (!acao) {
      e.preventDefault();
      alert("Selecione uma a√ß√£o antes de confirmar.");
      return;
    }

    if (acao === "suspender") {
      form.action = `/adm/desativar-usuario/${idUsuarioDenunciado}`;
      methodInput.value = "PUT"; // necess√°rio para o m√©todo override
    } else if (acao === "descartar") {
      form.action = "/adm/excluir-denuncia-usuario";
      methodInput.value = "POST";
    }
  });

  // üîπ Fun√ß√£o pra fechar modal
  window.fecharModal = function fecharModal() {
    modal.style.display = "none";
    selectAcao.value = "";
  };
});

</script>



