<style>

    @import url(cores.css);


  /* Estilo do Modal */
 
  .fechar-add-publis {
    float: right;
    font-size: 24px;
    cursor: pointer;
    margin: 10px;
  }

  .titulo-modal-add-publis {
    text-align: center;
    margin-bottom: 20px;
    color: var(--text-color);
  }

  
  
.modal-add-publis {
  display: none;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background-color: rgba(0,0,0,0.5);
  z-index: 1000;
}

.modal-content-add-publis {
  background: var(--cor-fundo);
  color: var(--text-color);
  width: 70%;
  min-width: 70vw;
  min-height: 80vh;
  padding: 20px;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
 
}

.modal-content-edit-port {
  /* ... */
  overflow-y: none;

}

/* Form */
#formadd {
  display: flex;
  flex-direction: column;
  flex-grow: 1;

}

.listagem-publi {
  display: grid;
  gap: 16px; 
  grid-template-columns: 1fr 1fr 1fr 1fr;
  


padding: 10px 20px;

}


.container-fora-list{
height: 70vh;
overflow: auto;
padding: 0px 10px;
}

.item-publi{
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10px;
    overflow: hidden;
    aspect-ratio: 1;
    max-width: 150px;
}


.item-publi.selecionado {
  border: 3px solid var(--cor-botao); /* ou outra cor de destaque */
}


.img-publi-modal{
    aspect-ratio: 1;
    width: 95%;
    height: 95%;
    border-radius: 6px;
    object-fit: cover; 
}

#enviar-add {
/* mantém o botão à direita, opcional */
  margin-top: 20px;
    background-color: #316886;
  color: White;
  font-family:"Montserrat" ;
  padding: 10px ;
  border: none;
  border-radius: 10px;
  margin: 10px;
}


  @media (max-width: 700px){

.modal-content-add-publis > * {
  flex-shrink: 0; 
}

    .conteudo-add_publis-publicacao {
     
        flex-direction: column-reverse;

      }


      
.modal-content-add-publis {
  background: var(--cor-fundo);
  color: var(--text-color);
  width: 100%;
  min-width: 100vw;
  min-height: 100vh;
 
}




    }





</style>


<!-- Modal -->
<section id="modal-add-publis" class="modal-add-publis">
  <section class="modal-content-add-publis">
    <span class="fechar-add-publis" id="fechar-modal-add-publis">&times;</span>
    <h2 class="titulo-modal-add-publis">Adicionar Publicações</h2>
   



<form action="/adicionar-publis-portfolio" id="formadd" method="POST">
    
      <input type="hidden" name="portfolioId" value="<%= portfolio ? portfolio.ID_PORTFOLIO : '' %>">
  <input type="hidden" name="publicacoesSelecionadas" id="publicacoesSelecionadas" value="">
  
       
 <section class="container-fora-list">
   <section class="listagem-publi" id="listagem-publi">
          <!-- Loader inicial -->
          <p id="loader-publicacoes">Carregando publicações...</p>
        </section>
 </section>


        <button type="submit" id="enviar-add">Adicionar publicações</button>
</form>


  






  </section>
</section>
